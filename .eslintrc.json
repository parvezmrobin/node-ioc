{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-typescript-prettier",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-restricted-syntax": "off",
        "no-continue": "off",
        "no-useless-constructor": "off",
        "@typescript-eslint/no-useless-constructor": ["error"]
    }
}
